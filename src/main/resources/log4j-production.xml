<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="FA" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="/var/www/app/logs/easyclinica.log" />
		<param name="MaxFileSize" value="100KB" />
		<param name="MaxBackupIndex" value="50" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %5p [%-20c{1}] %m%n" />
		</layout>
	</appender>

	<category name="br.com.easyclinica">
		<priority value="INFO" />
		<appender-ref ref="FA" />
	</category>

	<category name="org.vraptor">
		<priority value="WARN" />
		<appender-ref ref="FA" />
	</category>

	<category name="com.thoughtworks">
		<priority value="WARN" />
		<appender-ref ref="FA" />
	</category>

	<category name="br.com.caelum.vraptor">
		<priority value="WARN" />
		<appender-ref ref="FA" />
	</category>

	<category name="org.springframework">
		<priority value="WARN" />
		<appender-ref ref="FA" />
	</category>

	<category name="org.hibernate">
		<priority value="WARN" />
		<appender-ref ref="FA" />
	</category>

	<category name="com.mchange.v2.log.MLog">
		<priority value="WARN" />
		<appender-ref ref="FA" />
	</category>

</log4j:configuration>
