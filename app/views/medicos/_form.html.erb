<%= form_for(@medico, :html => { :class => "form"} ) do |f| %>
	
	<% if !f.error_messages.empty? %>
	<div class="flash"> 
		<div class="message error">
		  <%=h f.error_messages :header_message => 'Dados inválidos', 
		  											:message => 'Os seguintes erros ocorreram:', 
		  											:header_tag => :h3 %>
		</div>
	</div>
	<% end %>

	<fieldset class="cadastro">
		<label>Nome*:</label>
    <%= f.text_field :nome, :class => 'text_field' %>
	
		<div class="agrupar_campos">
			<label>CRM*:</label>
	    <%= f.text_field :crm, :class => 'text_field' %>
	    <span class="description">Ex: '55.555'</span>
	  </div>
	  
	  <div class="agrupar_campos">
	  	<label>Especialidade:</label>
	    <%= f.text_field :especialidade, :class => 'text_field' %>
	    <span class="description">Ex: 'Pediatra'</span>
	  </div>
	
		<div class="agrupar_campos">
			<label>Telefone:</label>
	    <%= f.text_field :telefone, :class => 'text_field mask_telefone' %>
	    <span class="description">Ex: '(11) 1111-1111'</span>
		</div>
		
		<div class="agrupar_campos">
			<label>E-mail:</label>
	    <%= f.text_field :email, :class => 'text_field' %>
	    <span class="description">Ex: 'pessoa@medico.com.br'</span>
		</div>
	
		<label>Observações</label>
    <%= f.text_area :observacoes, :class => 'text_field' %>
    <span class="description">Ex: 'só atende ortopedia'</span>
    
    <div class="botoes">    
	    <button class="button" type="submit"><%= image_tag 'tick.png', :alt => 'Salvar' %> Salvar </button>
			<%= link_to(medicos_path, :class => 'button') do %>
	      <%= image_tag 'cross.png', :alt => 'Cancelar' %> Cancelar
	    <% end %>
	  </div>   	
	</fieldset>
  
<% end %>