<% content_for :conteudo do %>
<div class="block" id="block">

  <div class="content">
    <h2 class="title">Relação de Médicos</h2>
    <div class="inner">
	
		<table class="table"> 
			<tr> 
				<th	class="first"><input type="checkbox" class="checkbox toggle" /></th> 
				<th>Nome</th> 
				<th>CRM</th>
				<th>Especialidade</th> 
				<th>Telefone</th> 
				<th>E-mail</th>
				<th class="last">&nbsp;</th> 
			</tr> 
			<% for medico in @medicos %>
			<tr class="<%= @medicos.index(medico).even? ? 'odd' : 'even' %> <%= 'inativo' unless medico.ativo? %>"> 
				<td><input type="checkbox" class="checkbox" name="id" value="<%= medico.id %>" /></td>
				<td><%= h medico.nome %></td>
				<td><%= h medico.crm %></td>
				<td><%= h medico.especialidade %></td>
				<td><%= h medico.telefone %></td>
				<td><%= h medico.email %></td>
				<td class="last">
					<%= form_for :medico, :url => medico_path(medico), :html => { :method => :delete } do |f| %>
						<%=link_to 'exibir', medico %> 
						<% if medico.ativo? %>
						| <%=link_to 'alterar', edit_medico_path(medico) %> 
						| <a href="#" onclick="if(confirm('Deseja realmente inativar esse médico?')) $(this).parent().submit();"/>inativar</a>
						<% end %>
					<% end %>
				</td> 
			</tr> 
			<% end %>
		</table>
		
		<%= will_paginate @medicos %>
		
	</div>
  </div>
</div>
<% end %>

<% content_for :navegacao do %>
<div class="block navegacao">
  <h3>Navegação</h3>
  <ul class="navigation">
    <li><a href="<%= new_medico_path %>">Criar novo médico</a></li>
  </ul>
</div>
<% end -%>
