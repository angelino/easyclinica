<%= form_for(@convenio, :html => { :class => "form"} ) do |f| %>
	
	<%= render :partial => 'shared/erros', :locals => { :f => f } %>

	<fieldset class="cadastro">	
		<label class="label">Nome*:</label>
    <%= f.text_field :nome, :class => 'text_field' %>
    <span class="description">Ex: 'Amil', 'Blue Life'</span>
	
		<label class="label">Endereço:</label>
    <%= f.text_field :endereco, :class => 'text_field' %>
    <span class="description">Ex: 'Av. Paulista, 123'</span>
		
		<div class="agrupar_campos">
			<label class="label">Bairro:</label>
	    <%= f.text_field :bairro, :class => 'text_field' %>
	    <span class="description">Ex: 'Jardins'</span>
		</div>
		
		<div class="agrupar_campos">
			<label class="label">CEP:</label>
	    <%= f.text_field :cep, :class => 'text_field mask_cep' %>
	    <span class="description">Ex: '12345-789'</span>		
		</div>
	
		<label class="label">Nome do Responsável:</label>
    <%= f.text_field :responsavel, :class => 'text_field' %>
    <span class="description">Ex: 'José da Silva'</span>
	
		<div class="agrupar_campos">
			<label class="label">Telefone*:</label>
    	<%= f.text_field :telefone, :class => 'text_field mask_telefone' %>
    	<span class="description">Ex: '(11) 1111-1111'</span>
		</div>
		
		<div class="agrupar_campos">
			<label class="label">E-mail:</label>
    	<%= f.text_field :email, :class => 'text_field' %>
    	<span class="description">Ex: 'pessoa@convenio.com.br'</span>
		</div>
		
		<label class="label">Website:</label>
    <%= f.text_field :website, :class => 'text_field' %>
    <span class="description">Ex: 'http://www.convenio.com.br'</span>
	
	<div class="agrupar_campos">
		<label class="label">Tabela de Serviços*:</label>
	<%= f.select :tabela_id, @tabelas.collect{|tabela| [tabela.nome, tabela.id]} %>
	<span class="description">Ex: 'AMB99'</span>
	</div>
	
	<div class="agrupar_campos">
		<label class="label">Valor em R$ da CH:</label>
	<%= f.text_field :valor_ch, :class => 'text_field' %>
	<span class="description">Ex: 'R$ 0.15'</span>
	</div>
	
		<label class="label">Observações</label>
    <%= f.text_area :observacoes, :class => 'text_field' %>
    <span class="description">Ex: 'só atende ortopedia'</span>
	
		<div class="botoes">
			<button class="button" type="submit"><%= image_tag 'tick.png', :alt => 'Salvar' %> Salvar</button>
			<%= link_to(convenios_path, :class => 'button') do %>
	      <%= image_tag 'cross.png', :alt => 'Cancelar' %> Cancelar
	    <% end %>
		</div>
	
	</fieldset>
  
<% end %>